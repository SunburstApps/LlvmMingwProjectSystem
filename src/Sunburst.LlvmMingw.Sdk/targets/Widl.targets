<Project>
  <Import Project="Midl.props" />
  <Target Name="BeforeMidl" BeforeTargets="Midl" />
  <Target Name="AfterMidl" AfterTargets="Midl" />

  <Target Name="Midl" DependsOnTargets="_PrepareMidl">
    <UpToDateCheck InputItems="@(Midl)" OutputItems="%(Midl.OutputFiles)">
      <Output TaskParameter="UpdatedFiles" ItemName="_MidlOutdated" />
    </UpToDateCheck>

    <WidlGenerateHeaders LlvmMingwRoot="$(LlvmMingwRoot)" TargetArchitecture="$(Architecture)"
        SourceFile="%(_MidlOutdated.Identity)" IncludeDirectories="%(_MidlOutdated.IncludeDirectories)"
        PreprocessorDefinitions="%(_MidlOutdated.PreprocessorDefinitions)">
      <Output TaskParameter="FileWrites" ItemName="FileWrites" />
      <Output TaskParameter="Header" ItemName="ClangHeader" />
    </WidlGenerateHeaders>
  </Target>

  <Target Name="_PrepareMidl">
    <!-- First, set default values based on shorthand properties. -->
    <ItemGroup>
      <Midl>
        <HeaderFilePath Condition="'%(Midl.HeaderFilePath)' == '' and '%(Midl.GenerateHeader)' == 'true'">
          $(IntermediateOutputDirectory)Generated Headers\%(Filename).h
        </HeaderFilePath>

        <TypeLibraryFilePath Condition="'%(Midl.TypeLibraryFilePath)' == '' and '%(Midl.GenerateTypeLibrary)' == 'true'">
          $(IntermediateOutputDirectory)Generated Files\%(Filename).tlb
        </TypeLibraryFilePath>
      </Midl>
    </ItemGroup>

    <!-- Second, add to %(Midl.OutputFiles) for dependency tracking -->
    <ItemGroup>
      <Midl>
        <OutputFiles Condition="'%(Midl.HeaderFilePath)' != ''">%(Midl.HeaderFilePath);%(Midl.OutputFiles)</OutputFiles>
        <OutputFiles Condition="'%(Midl.TypeLibraryFilePath)' != ''">%(Midl.TypeLibraryFilePath);%(Midl.OutputFiles)</OutputFiles>
      </Midl>
    </ItemGroup>

    <!-- Third, create directories that don't already exist. -->
    <MakeDir Directories="$([System.IO.Path]::GetDirectoryName('%(Midl.HeaderFilePath)'))" Condition="!Exists($([System.IO.Path]::GetDirectoryName('%(Midl.HeaderFilePath)')))" />
    <MakeDir Directories="$([System.IO.Path]::GetDirectoryName('%(Midl.TypeLibraryFilePath)'))" Condition="!Exists($([System.IO.Path]::GetDirectoryName('%(Midl.TypeLibraryFilePath)')))" />
  </Target>
</Project>
