    <LlvmMingwTasksPath Condition="'$(LlvmMingwTasksPath)' == '' and '$(MSBuildRuntimeType)' != 'Core'">$(MSBuildThisFileDirectory)net462\Sunburst.LlvmMingw.BuildTasks.dll</LlvmMingwTasksPath>
