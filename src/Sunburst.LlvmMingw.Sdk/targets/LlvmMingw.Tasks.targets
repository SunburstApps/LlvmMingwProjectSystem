  <UsingTask TaskName="WidlGenerateHeaders" AssemblyFile="$(LlvmMingwTasksPath)" />
  <UsingTask TaskName="MakeParentDir" AssemblyFile="$(LlvmMingwTasksPath)" />
</Project>
